<h4>向用户<span style="color: blue"><%= @resume.user.email %></span>发送信息</h4>

<%= simple_form_for @message do |f| %>
  <%= f.hidden_field :job_id, value: @job.id %>
  <%= f.hidden_field :sender_id, value: current_user.id %>
  <%= f.hidden_field :receiver_id, value: @resume.user.id %>
  <%= f.text_area :content, label: "内容" %><br>
  <%= f.submit "发送" %>
<% end %>




