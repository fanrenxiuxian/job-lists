<h2>后台Job-Listing</h2>
<%= link_to "New Job", new_admin_job_path, class:"btn btn-primary pull-right" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>职位名称</th>
      <th>工作内容</th>
      <th>收到简历数量</th>
      <th>工资上限</th>
      <th>工资下限</th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td>
          <%= job_status(job) %>
          <% if job.is_hidden %>
            <%= link_to job.title, admin_job_path(job) %>
          <% else %>
            <%= link_to job.title, admin_job_path(job) %>
          <% end %>
        </td>
        <td><%= job.description %></td>
        <td><%= link_to job.resumes.count, job_resumes_path(job),class:"btn btn-xs btn-primary" %></td>
        <td><%= job.wage_upper_bound %></td>
        <td><%= job.wage_lower_bound %></td>
        <td>
          <% if job.is_hidden %>
            <%= link_to "去公开", publish_admin_job_path(job), method: :post, class:"btn btn-xs btn-success" %>
          <% else %>
            <%= link_to "去隐藏", hide_admin_job_path(job), method: :post, class:"btn btn-xs btn-warning" %>
          <% end %>
        </td>
        <td><%= link_to "编辑", edit_admin_job_path(job) %></td>
        <td><%= link_to "删除", admin_job_path(job), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
