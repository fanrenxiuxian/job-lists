<div class="container">
  <div class="row">
    <br>
    <div id="collection_job">
      <h4 class="table-head">我收藏的职位：</h4>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>职位名称</th>
            <th>工作内容</th>
            <th>工资上限</th>
            <th>工资下限</th>
            <th>发布时间</th>
          </tr>
        </thead>

        <tbody>
          <% @jobs.each do |job| %>
            <tr>
              <td><%= link_to job.title, job_path(job) %></td>
              <td><%= job.description %></td>
              <td><%= job.wage_upper_bound %></td>
              <td><%= job.wage_lower_bound %></td>
              <td><%= time_ago_in_words(job.created_at) %>
                ago</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="text-center">
    <div class="apple_pagination">
      <%= will_paginate @jobs, :container => false %>
    </div>
  </div>
